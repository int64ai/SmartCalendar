{
  "name": "smartcalendar-extension",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:panel": "vite",
    "dev:bg": "vite build --config vite.background.config.ts --watch",
    "build:panel": "tsc --noEmit && vite build",
    "build:bg": "vite build --config vite.background.config.ts",
    "build": "npm run build:panel && npm run build:bg && cp public/manifest.json dist/ && cp -r public/icons dist/",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "dexie": "^4.0.11",
    "marked": "^15.0.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@heroicons/react": "^2.2.0",
    "@types/chrome": "^0.0.304",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "fake-indexeddb": "^6.0.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "vite": "^6.2.0",
    "vitest": "^3.0.5"
  }
}
